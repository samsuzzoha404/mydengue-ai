# Environment Configuration Template
# Copy this to .env and update with your actual values

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=true

# Database Configuration (for production)
DATABASE_URL=sqlite:///./dengue_ai.db
# DATABASE_URL=postgresql://user:password@localhost/dengue_ai_db

# External API Keys
OPENWEATHERMAP_API_KEY=your_openweather_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Firebase Configuration (optional for notifications)
FIREBASE_ADMIN_SDK_PATH=path/to/firebase-admin-sdk.json

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Models Configuration
AI_MODEL_PATH=./models/
LSTM_MODEL_PATH=./models/lstm_dengue_model.h5
CNN_MODEL_PATH=./models/cnn_breeding_classifier.h5

# Gamification Settings
POINTS_PER_VERIFIED_REPORT=50
POINTS_PER_PHOTO=30
POINTS_PER_LOCATION=20

# Alert System
SMS_API_KEY=your_sms_api_key
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Blockchain Configuration (optional)
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your-project-id
PRIVATE_KEY=your-wallet-private-key
CONTRACT_ADDRESS=your-deployed-contract-address